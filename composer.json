{
    "name": "statamic/statamic",
    "description": "Statamic",
    "keywords": [
        "statamic",
        "cms",
        "flat file",
        "laravel"
    ],
    "type": "project",
    "require": {
        "php": "^8.0",
        "laravel/framework": "^v10.24",
        "laravel/octane": "^2.3",
        "laravel/tinker": "^2.0",
        "livewire/livewire": "^3.0",
        "rias/statamic-color-swatches": "^2.2",
        "spatie/browsershot": "^3.42",
        "spatie/laravel-discord-alerts": "^1.0.0",
        "spatie/laravel-feed": "^4.3.0",
        "spatie/laravel-medialibrary": "^10.12.2",
        "spatie/laravel-sitemap": "^7.2",
        "statamic/cms": "^v5.0",
        "stripe/stripe-php": "^7.68",
        "tempest/highlight": "^1.3"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5",
        "spatie/laravel-ignition": "^2.0",
        "fakerphp/faker": "^1.13",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^6.2",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.10"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "spatie/laravel-ray"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pre-update-cmd": [
            "Statamic\\Console\\Composer\\Scripts::preUpdateCmd"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan statamic:install --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "build": [
            "yarn production",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php please ssg:generate",
            "@php artisan sitemap"
        ]
    }
}
